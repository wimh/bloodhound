
<VirtualHost *:8080>

    LogLevel warn

    WSGIDaemonProcess bh_tracker user=bloodhound python-path=<%= @bhvirtualenv %>/lib/python2.7/site-packages
    WSGIScriptAlias / <%= @bhwww %>/cgi-bin/trac.wsgi
    <Directory <%= @bhwww %>/cgi-bin>
        WSGIProcessGroup bh_tracker
        WSGIApplicationGroup %{GLOBAL}
        Order deny,allow
        Allow from all
    </Directory>
    <LocationMatch "/[^/]+/login">
        AuthType Digest
        AuthName "Bloodhound"
        AuthDigestDomain /
        AuthUserFile <%= @bhenvironments %>/test/bloodhound.htdigest
        Require valid-user
    </LocationMatch>
</VirtualHost>

